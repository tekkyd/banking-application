@model Login
@{
    ViewData["Title"] = "Login";
}

<h1 class="display-4 mb-4 pb-3 border-bottom">Login</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div class="form-group mb-2">
                <label asp-for="LoginID" class="control-label"></label>
                <input asp-for="LoginID" class="form-control" />
                <span asp-validation-for="LoginID" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label for="Password" class="control-label">Password</label>
                <input id="Password" name="Password" type="password" class="form-control"
                    data-val="true" data-val-required="The Password field is required." />
                @Html.ValidationMessage("Password", new { @class = "text-danger" })
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
            @Html.ValidationMessage("LoginFailed", new { @class = "text-danger" })
        </form>

        <form asp-action="Login" method="post">
            <input type="hidden" name="loginID" value="0000" />
            <input type="hidden" name="password" value="abc123" />

            <div class="d-flex align-items-center mt-4 gap-2">
                <p class="mb-0">Don't have an account?</p>
                <button type="submit" class="btn btn-outline-primary">Continue as guest</button>
            </div>
        </form>
    </div>

</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
